{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gestion catégories</h1>

    <p>
        <a href="{{ path('app_admin_category_edit') }}">
            Ajouter une catégorie
        </a>
    </p>

    <table class="table table-striped">
        <tr>
            <th>ID</th>
            <th>NOM</th>
            <th width="350px"></th>
        </tr>

        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td></td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}